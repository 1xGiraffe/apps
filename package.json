{
  "name": "@galacticcouncil/apps",
  "private": false,
  "bugs": {
    "url": "https://github.com/galacticcouncil/apps/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galacticcouncil/apps.git"
  },
  "type": "module",
  "workspaces": [
    "packages/*",
    "pages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:watch": "turbo run build:watch",
    "clean": "turbo run clean",
    "link": "turbo run link",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm i --package-lock-only",
    "changeset:publish": "npm run build && pnpm publish --dry-run"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "esbuild": "^0.17.11",
    "node-html-parser": "^5.4.2-0",
    "patch-package": "^7.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^5.0.4"
  }
}
